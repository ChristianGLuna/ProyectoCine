@page
@model Proyecto_Cine.Pages.TestAuthModel
@using Microsoft.AspNetCore.Authorization
@{
    ViewData["Title"] = "Test de Autenticación";
}

<h2>Prueba de Autenticación</h2>

@if (User.Identity.IsAuthenticated)
{
    <p><strong>Usuario autenticado:</strong> @User.Identity.Name</p>
    <p><strong>Rol:</strong> @(User.IsInRole("Admin") ? "Admin" : "Cliente")</p>
}
else
{
    <p class="text-danger">No estás autenticado.</p>
}
