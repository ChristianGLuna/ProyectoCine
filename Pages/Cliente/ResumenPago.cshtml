@page
@model Proyecto_Cine.Pages.Cliente.ResumenPagoModel
@{
Layout = null;
}

<!DOCTYPE html>

<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Resumen</title>
    <link rel="stylesheet" href="/css/Sitio.css" />
    <link rel="stylesheet" href="/css/resumen.css" />
</head>
<body class="asientos-body">
    <div class="asientos-container">

```
    <!-- LOGO -->
    <div class="logo-header">
        <a href="/Cliente/Home"><img src="~/images/logo.svg" alt="Logo" /></a>
    </div>

    <!-- HEADER -->
    <header class="asientos-header">
        <a href="/Cliente/SeleccionAsientos?id=@Model.Funcion?.Id" class="btn-regresar">⟵ Regresar</a>
        <div>
            <h1 class="titulo-asientos">Resumen</h1>
            <p>Resumen de la compra</p>
            <nav class="breadcrumb">
                <a href="#">Cartelera</a> ▸
                <a href="#">Funciones</a> ▸
                <a href="#">Boletos</a> ▸
                <a href="#">Asientos</a> ▸
                <strong>Resumen</strong>
            </nav>
        </div>
    </header>

    <!-- CUERPO -->
    <main class="resumen-grid">
        <!-- DETALLES -->
        <section class="resumen-funcion resumen-blanco">
            <img src="@Model.Pelicula?.Imagen" alt="@Model.Pelicula?.Titulo" class="poster" />
            <h3><span class="etiqueta-b">@Model.Pelicula?.Clasificacion</span> @Model.Pelicula?.Titulo</h3>
            <p><small><em>Duración: @Model.Pelicula?.Duracion min</em></small></p>
            <p><strong>Cine:</strong> @Model.NombreSucursal</p>
            <p><strong>Función:</strong> @Model.FechaFormateada, @Model.HoraFormateada<br> Sala @Model.NombreSala</p>
            <p><strong>Boletos:</strong> @Model.BoletosDescripcionInput</p>
            <p><strong>Asientos:</strong> @Model.AsientosSeleccionados</p>
            <p class="resumen-total"><strong>Total:</strong> $ @Model.TotalInput</p>
            <hr>
            <p><strong>Sinopsis:</strong><br>
                @Model.Pelicula?.Sinopsis
            </p>
        </section>

        <!-- MÉTODO DE PAGO -->
        <section class="resumen-metodo">
            <h3>Método de Pago</h3>
            <form method="post">
                <input type="hidden" name="idFuncion" value="@Model.idFuncion" />
                <input type="hidden" name="AsientosSeleccionados" value="@Model.AsientosSeleccionados" />
                <input type="hidden" name="BoletosDescripcionInput" value="@Model.BoletosDescripcionInput" />
                <input type="hidden" name="TotalInput" value="@Model.TotalInput" />

                <label><input type="radio" name="MetodoPago" value="PayPal" onclick="mostrarPopup('paypalModal')"> PayPal</label>
                <label><input type="radio" name="MetodoPago" value="Tarjeta" onclick="mostrarPopup('tarjetaModal')"> Tarjeta de débito</label>
            </form>
        </section>
    </main>

    <!-- BOTÓN -->
    <div style="text-align: center; margin-top: 2rem;">
        <form method="post">
            <input type="hidden" name="idFuncion" value="@Model.idFuncion" />
            <input type="hidden" name="AsientosSeleccionados" value="@Model.AsientosSeleccionados" />
            <input type="hidden" name="BoletosDescripcionInput" value="@Model.BoletosDescripcionInput" />
            <input type="hidden" name="TotalInput" value="@Model.TotalInput" />
            <input type="hidden" name="MetodoPago" value="@Model.MetodoPago" />
            <button type="submit" class="btn-continuar">Pagar</button>
        </form>
    </div>
</div>

<!-- JS -->
<script>
    function mostrarPopup(id) {
        document.getElementById(id).style.display = 'flex';
    }
    function cerrarPopup(id) {
        document.getElementById(id).style.display = 'none';
    }
</script>
```

</body>
</html>
